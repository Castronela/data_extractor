{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "format_1": {
            "format": "%(asctime)s - %(name)-25s - %(levelname)-8s - %(message)s"
		},
		"json": {
			"()": "pythonjsonlogger.json.JsonFormatter",
			"format": "%(asctime)s %(levelname)s %(filename)s %(lineno)d %(message)s",
            "rename_fields": {"asctime": "time", "levelname": "level", "lineno": "line_number"}
		}
	},
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
			"level": "ERROR",
            "formatter": "format_1",
            "stream": "ext://sys.stdout"
		},
        "file_log": {
            "class": "logging.handlers.RotatingFileHandler",
			"level": "DEBUG",
            "formatter": "format_1",
            "filename": "logs/log.log",
            "maxBytes": 5242880,
			"backupCount": 3
		},
        "json_log": {
            "class": "logging.handlers.RotatingFileHandler",
			"level": "DEBUG",
            "formatter": "json",
            "filename": "logs/log.jsonl",
            "maxBytes": 5242880,
			"backupCount": 3
		},
        "file_test": {
            "class": "logging.handlers.RotatingFileHandler",
			"level": "DEBUG",
            "formatter": "format_1",
            "filename": "logs/log_test.log",
            "maxBytes": 5242880,
			"backupCount": 3
		}
	},
    "loggers": {
        "conftest": {
            "level": "DEBUG",
            "handlers": ["file_test"]
        },
        "extract_weather": {
            "level": "DEBUG",
            "handlers": ["stdout", "file_log", "json_log"]
        },
        "blob_runner": {
            "level": "DEBUG",
            "handlers": ["stdout", "file_log", "json_log"]
        },
        "load_to_snowflake": {
            "level": "DEBUG",
            "handlers": ["stdout", "file_log", "json_log"]
        },
        "transform_weather": {
            "level": "DEBUG",
            "handlers": ["stdout", "file_log", "json_log"]
        },
		"test_extract_weather": {
			"level": "DEBUG",
			"handlers": ["file_test"]
		},
		"test_transform_weather": {
			"level": "DEBUG",
			"handlers": ["file_test", "stdout"]
		},
		"test_blob_runner": {
			"level": "DEBUG",
			"handlers": ["file_test"]
		},
		"test_load_to_snowflake": {
			"level": "DEBUG",
			"handlers": ["file_test"]
		}
	}
}